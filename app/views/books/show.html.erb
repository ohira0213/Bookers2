<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<div>
  <%= image_tag @book.get_image %>
  <p><%= @book.user.name %></p>
  <%= link_to edit_book_path(@book) do %>
    <p><%= @book.title %></p>
  <% end %>
  <p><%= @book.body %></p>
  
  <%= link_to "Edit", book_path(@book) %>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？"  %>
  <% end %>
</div>
