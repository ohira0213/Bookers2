<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
    <% @books.each do |book| %>
  <div>
    <%= image_tag book.get_image %>
  <%= link_to book_path(book) do %>
    <p>Title：<%= book.title %></p>
  <% end %>
    <p>Opinion：<%= book.body %></p>
  </div>
<% end %>